# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Clientes
POST    /clientes                               Clientes.create
POST    /clientes/{id}                          Clientes.update
GET     /clientes/{id}                          Clientes.show
GET     /clientes                               Clientes.list
#GET    /clientes/new                           staticFile:/public/client.html

# Planos
POST	/planos								Planos.create
GET     /planos/{id}                        Planos.edit
POST    /planos/{id}                        Planos.update

# Home page
GET     /                                       Application.index

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
